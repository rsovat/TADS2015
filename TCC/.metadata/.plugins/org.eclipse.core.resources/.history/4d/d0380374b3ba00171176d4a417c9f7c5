package view;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JTextField;

import models.ELM327ReadSensors;

import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class Teste implements ActionListener{

	public JFrame frame;
	private JTextField textField;
	private JButton btnNewButton;
	private ELM327ReadSensors elm327ReadSensors;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Teste window = new Teste();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Teste() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 230, 151);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		textField = new JTextField();
		textField.setBounds(10, 31, 144, 20);
		frame.getContentPane().add(textField);
		textField.setColumns(10);
		
		btnNewButton = new JButton("New button");
		btnNewButton.addActionListener(this);
		btnNewButton.setBounds(20, 62, 89, 23);
		frame.getContentPane().add(btnNewButton);
	}
	public void setObjeto(ELM327ReadSensors elm327ReadSensors) {
		this.elm327ReadSensors = elm327ReadSensors;
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		String modelo = textField.getText().toString();
		
		if ( !modelo.isEmpty()) {
			if (elm327ReadSensors == null) {
				elm327ReadSensors = new ELM327ReadSensors(modelo, modelo);
				System.out.println("OOOOOOOOOOOOOOOOOOOOOOOOOOOO");
			}else{
				elm327ReadSensors.setChassiCarro(modelo);
				elm327ReadSensors.setModeloCarro(modelo);
			}
			System.out.println(elm327ReadSensors.getModeloCarro());
			System.out.println("PPPPPPPPPPPPPPPPPPPPPP");
			this.frame.dispose();
		}
		
	}
}
