import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class BancoPayNow {

	public static void main(String[] args) throws SQLException {
		Connection conn = DriverManager
				.getConnection("jdbc:hsqldb:mem:banco-em-memoria", "", "");

		PreparedStatement createTable = conn.prepareStatement("CREATE TABLE Teste(id int, nome varchara(50), cpf varchar(50), rg varchar(50))");
		createTable.executeUpdate();
		createTable.close();

		PreparedStatement insert = conn.prepareStatement("INSERT INTO Teste VALUES (?, ?, ?, ?)");
		insert.setInt(1, 1);
		insert.setString(2, "Ruan Luiz Alves da Silva");
		insert.setString(3, "123.523.546-65");
		insert.setString(4, "0043343434");
		insert.executeUpdate();
		insert.close();

		ResultSet resultado = conn.prepareStatement("SELECT * FROM Teste").executeQuery();

		while (resultado.next()) {
			System.out.println(resultado.getInt("id")+ " "+ resultado.getString("nome"));
		}

		resultado.close();

		conn.close();
	}

}